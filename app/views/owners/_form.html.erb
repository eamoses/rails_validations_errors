<% if @owner.errors.any? %>
<div id="error_explination">
  <h2><%= pluralize(@owner.errors.count, "error")%> prohibited this from being saved:</h2>
  <ul>
    <% @owner.errors.full_messages.each do |msg| %>
    <li><%= msg%></li>
    <%end%>
</ul>
</div>
<%end%>
<%= form_for @owner do |f| %>
  <div class="form-group">
    <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.telephone_field :phone, class: "form-control", placeholder: "Phone Number" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Owner", class: "btn btn-block btn-success" %>
  </div>
<% end %>
